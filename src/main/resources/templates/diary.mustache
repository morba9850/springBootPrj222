{{>layout/header2}}

<div class="main-wrap" xmlns:th="http://www.w3.org/1999/xhtml">
    <div class="cover_1 cover_sm">
        <div class="img_bg" style="background-image: url(img/slider-1.jpg);" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7" data-aos="fade-up">
                        <h2 class="heading">사진 다이어리</h2>
                        <p class="lead">Photo Diary</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- .cover_1 -->


    <div class="section" data-aos="fade-up">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-8  text-center">
                    <h2 class="mb-3">오늘의 사진일기 작성</h2>
                    <p class="lead">Today's photo journal</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-10 p-5 form-wrap">


                        <div class="form-group">
                            <label for="title">제목</label>
                            <input type="text" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="author">사진 </label>
                            파일 : <input type="file" name="file" onchange="fileCheck(this)" id="author" accept="image/*">
                        </div>
                        <div class="form-group">
                            <label for="content">내용</label>
                            <textarea name="" id="content" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                        <div class="form-group">

                            <a href="/diary" role="button" class="btn btn-secondary">취소</a>
                            <button type="button" class="btn btn-primary" id="btn-save">등록</button>
                        </div>
                </div>
            </div>
        </div>
    </div>



    <div class="section">


        <form action="" class="form-subscribe mb-5">
            <div class="form-group form-field test">
                <input type="submit" value="Search" class="btn btn-primary">
                <input type="text" class="form-control" placeholder="hashtag">
            </div>
        </form>


        <div class="container">

            {{#posts}}

                <div class="col-md-12">
                    <div class="media d-block media-bg-white mb-5" data-aos="fade-up"  data-aos-delay="400">
                        <figure>
                            <a href="blog-single.html"><img src="img/news_2.jpg" alt="Image placeholder" class="img-fluid"></a>
                        </figure>
                        <div class="media-body">
                            <h3>{{title}}</h3>
                            <p class="post-meta"><span> {{id}}</span></p>
                            <p class="mb-4">{{modifiedDate}}</p>
                            <p><a href="#" class="btn btn-primary btn-outline-primary btn-sm">Read More</a></p>
                        </div>
                    </div> <!-- .media -->
                </div>


            {{/posts}}



        </div>
    </div> <!-- .section -->



</div> <!-- .main-wrap -->


{{>layout/footer2}}